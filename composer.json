{
    "name": "beepbeep-ai/alt-text-generator",
    "description": "WordPress plugin for AI-powered alt text generation",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "BeepBeep AI",
            "email": "support@beepbeep.ai"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "BeepBeepAI\\AltText\\": "includes/"
        },
        "classmap": [
            "includes/",
            "admin/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BeepBeepAI\\AltText\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:unit": "phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration",
        "phpcs": "phpcs --standard=WordPress includes/ admin/",
        "phpcs:fix": "phpcbf --standard=WordPress includes/ admin/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
