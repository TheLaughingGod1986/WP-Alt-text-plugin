<?xml version="1.0"?>
<ruleset name="WordPress Plugin Standards">
	<description>WordPress Coding Standards for BeepBeep AI Alt Text Generator</description>

	<!-- Exclude development files -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/dist/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>reset-credits-simple.php</exclude-pattern>
	<exclude-pattern>scripts/*</exclude-pattern>
	<exclude-pattern>*.md</exclude-pattern>
	<exclude-pattern>*.sh</exclude-pattern>
	<exclude-pattern>*.json</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>
	<exclude-pattern>*.svg</exclude-pattern>
	<exclude-pattern>*.png</exclude-pattern>
	<exclude-pattern>*.jpg</exclude-pattern>
	<exclude-pattern>*.jpeg</exclude-pattern>
	<exclude-pattern>*.gif</exclude-pattern>
	<exclude-pattern>*.pot</exclude-pattern>
	<exclude-pattern>*.po</exclude-pattern>
	<exclude-pattern>*.mo</exclude-pattern>
	<exclude-pattern>composer.json</exclude-pattern>
	<exclude-pattern>composer.lock</exclude-pattern>
	<exclude-pattern>package.json</exclude-pattern>
	<exclude-pattern>package-lock.json</exclude-pattern>
	<exclude-pattern>webpack.config.js</exclude-pattern>
	<exclude-pattern>phpcs.xml</exclude-pattern>

	<!-- Use WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax (modern PHP) -->
		<exclude name="WordPress.Arrays.ArrayDeclaration.ShortArraySyntax"/>
		<!-- Yoda conditions are optional -->
		<exclude name="WordPress.PHP.YodaConditions"/>
		<!-- File naming is flexible for plugin structure -->
		<exclude name="WordPress.Files.FileName"/>
	</rule>

	<!-- Set minimum PHP version -->
	<config name="testVersion" value="7.4-"/>
</ruleset>

