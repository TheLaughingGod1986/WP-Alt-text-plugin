{
  "name": "opptiai-alt-text-generator",
  "version": "4.2.0",
  "description": "WordPress plugin for AI-powered alt text generation",
  "scripts": {
    "build:js": "node scripts/minify-js.js",
    "build:css": "node scripts/minify-css.js",
    "build:assets": "npm run build:js && npm run build:css",
    "build:compress": "node scripts/compress-assets.js",
    "build:version": "node scripts/version-assets.js",
    "build": "npm run build:assets && npm run build:compress && npm run build:version",
    "test": "vendor/bin/phpunit",
    "test:watch": "vendor/bin/phpunit --testdox --colors=always",
    "prepare": "husky install || echo 'Husky not installed'"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "cssnano": "^7.1.2",
    "cssnano-cli": "^1.0.5",
    "husky": "^8.0.3",
    "terser": "^5.44.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "postcss": "^8.5.6"
  }
}
